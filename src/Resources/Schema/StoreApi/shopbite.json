{
  "openapi": "3.0.0",
  "info": {
    "title": "ShopBite API",
    "description": "API for retrieving ShopBite configuration",
    "version": "1.0.0"
  },
  "paths": {
    "/shopbite/config": {
      "get": {
        "tags": ["ShopBite"],
        "summary": "Get ShopBite configuration",
        "description": "Retrieves ShopBite configuration including checkout status and delivery time",
        "operationId": "shopbite.config.get",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns ShopBite Information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ShopBiteConfig"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "StoreApiKey": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "ShopBiteConfig": {
        "type": "object",
        "description": "ShopBite configuration data",
        "properties": {
          "isCheckoutEnabled": {
            "type": "boolean",
            "description": "Whether checkout is enabled for ShopBite"
          },
          "deliveryTime": {
            "type": "integer",
            "minimum": 1,
            "description": "Default delivery time in minutes"
          }
        },
        "required": ["isCheckoutEnabled", "deliveryTime"]
      }
    },
    "securitySchemes": {
      "StoreApiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "sw-access-key",
        "description": "Shopware Store API access key"
      }
    }
  }
}