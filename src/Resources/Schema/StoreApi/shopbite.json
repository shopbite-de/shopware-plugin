{
  "openapi": "3.0.0",
  "info": {
    "title": "ShopBite API",
    "description": "API for retrieving ShopBite configuration",
    "version": "1.0.0"
  },
  "paths": {
    "/shopbite/config": {
      "get": {
        "tags": ["ShopBite"],
        "summary": "Get ShopBite configuration",
        "description": "Retrieves ShopBite configuration including checkout status and delivery time",
        "operationId": "shopbite.config.get",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns ShopBite Information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ShopBiteConfig"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "StoreApiKey": []
          }
        ]
      }
    },
    "/shopbite/business-hour": {
      "get": {
        "tags": ["ShopBite"],
        "summary": "Get business hours",
        "description": "Retrieves business hours for the current sales channel",
        "operationId": "shopbite.business-hour.get",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns business hours",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BusinessHourStruct"
                }
              }
            }
          }
        },
        "security": [
          {
            "StoreApiKey": []
          }
        ]
      }
    },
    "/shopbite/holiday": {
      "get": {
        "tags": ["ShopBite"],
        "summary": "Get holidays",
        "description": "Retrieves holidays for the current sales channel",
        "operationId": "shopbite.holiday.get",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns holidays",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HolidayStruct"
                }
              }
            }
          }
        },
        "security": [
          {
            "StoreApiKey": []
          }
        ]
      }
    },
    "/shopbite/multi-channel-group": {
      "get": {
        "tags": ["ShopBite"],
        "summary": "Get MultiChannelGroup",
        "description": "Retrieves MultiChannelGroup information for the current sales channel",
        "operationId": "shopbite.multi-channel-group.get",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns MultiChannelGroup information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MultiChannelGroupStruct"
                }
              }
            }
          }
        },
        "security": [
          {
            "StoreApiKey": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "ShopBiteConfig": {
        "type": "object",
        "description": "ShopBite configuration data",
        "properties": {
          "isCheckoutEnabled": {
            "type": "boolean",
            "description": "Whether checkout is enabled for ShopBite"
          },
          "deliveryTime": {
            "type": "integer",
            "minimum": 1,
            "description": "Default delivery time in minutes"
          }
        },
        "required": ["isCheckoutEnabled", "deliveryTime"]
      },
      "BusinessHour": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "dayOfWeek": {
            "type": "integer",
            "minimum": 1,
            "maximum": 7
          },
          "openingTime": {
            "type": "string"
          },
          "closingTime": {
            "type": "string"
          },
          "salesChannelId": {
            "type": "string",
            "format": "uuid"
          },
          "translated": {
            "type": "array",
            "items": {}
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "apiAlias": {
            "type": "string"
          }
        }
      },
      "BusinessHourStruct": {
        "type": "object",
        "properties": {
          "businessHours": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BusinessHour"
            }
          }
        }
      },
      "Holiday": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "start": {
            "type": "string",
            "format": "date-time"
          },
          "end": {
            "type": "string",
            "format": "date-time"
          },
          "salesChannelId": {
            "type": "string",
            "format": "uuid"
          },
          "translated": {
            "type": "array",
            "items": {}
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "apiAlias": {
            "type": "string"
          }
        }
      },
      "HolidayStruct": {
        "type": "object",
        "properties": {
          "holidays": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Holiday"
            }
          }
        }
      },
      "MultiChannelGroup": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "salesChannels": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SalesChannel"
            }
          },
          "translated": {
            "type": "array",
            "items": {}
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "apiAlias": {
            "type": "string"
          }
        }
      },
      "SalesChannel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "domains": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Domain"
            }
          },
          "translated": {
            "type": "array",
            "items": {}
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "apiAlias": {
            "type": "string"
          }
        }
      },
      "Domain": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "url": {
            "type": "string"
          },
          "languageId": {
            "type": "string",
            "format": "uuid"
          },
          "currencyId": {
            "type": "string",
            "format": "uuid"
          },
          "snippetSetId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "translated": {
            "type": "array",
            "items": {}
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "apiAlias": {
            "type": "string"
          }
        }
      },
      "MultiChannelGroupStruct": {
        "type": "object",
        "properties": {
          "multiChannelGroup": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MultiChannelGroup"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "StoreApiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "sw-access-key",
        "description": "Shopware Store API access key"
      }
    }
  }
}