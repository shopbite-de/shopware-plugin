{
    "name": "shopbite-de/shopware-plugin",
    "description": "Shopware 6 Plugin for ShopBite Storefront",
    "type": "shopware-platform-plugin",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ShopBite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ShopBite\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Lirim Veliu",
            "email": "lirim@veliu.net"
        }
    ],
    "extra": {
        "shopware-plugin-class": "ShopBite\\ShopBitePlugin",
        "label": {
            "de-DE": "ShopBite",
            "en-GB": "ShopBite"
        }
    },
    "require": {
        "php": "^8.4",
        "shopware/core": "~6.7.0",
        "azjezz/psl": "^4.2"
    },

    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^13.0",
        "friendsofphp/php-cs-fixer": "^3.92",
        "vimeo/psalm": "^6.14",
        "php-standard-library/psalm-plugin": "^2.3"
    }
}
